@import '~@/styles/colors.styl';
@import '~@/styles/animations.styl';

#signup-page
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;


  #login-form-wrapper
    &.login, &.signup
      animation-name: settling; 
      animation-duration: 1s;
      animation-timing-function: cubic-bezier(.14, .79, 0, 1.01);


  #title
    color: orange;
    font-size: 96px;
    margin-top: -2em;
    margin-bottom: 1em;

  #signup-form
    width: 400px;
    flex: 0 1 auto;

  #signup-btn, #call
    text-align: right;
    font-size: 16px;
    margin-bottom: 1em;