main, #main-container
  height 100%
  width 100%;

padding = 5px
#main-container
  display flex
  flex-direction column
  justify-content flex-start
  align-items stretch
header
  font-size 20px
  color white;
  padding padding
  box-shadow 0 0px 4px #38383863
  h1
    text-align center
    font-size 1em  
    text-transform uppercase
    line-height 1.5em;
    overflow hidden
    text-overflow ellipsis
    font-weight bold

  .filler
    display flex
    height 2em
    align-items center
    .name
      flex 1 0 auto
      text-align left
      font-size .8em
    .punctuation
      flex 1 0 auto;
      text-align right
      font-size .8em

form, [role = "role"]
  flex 1 1 100%
  height 100%
  width 100%
  box-shadow: inset 0 0 20px #d8d8d8;
  padding padding

  .tip
    font-size 12px
    text-align center
    width 100%

form, [role = "role"]
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-start

.new-task-btn
  flex 0 0 auto
  color white
  font-weight bold
  letter-spacing 2px
  width 100%
  height 80px
  