@import '~@/styles/colors';

main
  height: 100%;
  display: flex;
  flex-direction: column;

header
  height: 100px;
  flex: 0 0 auto;
  display: flex;
  justify-content: flex-end;
  align-items:center;

  ul
    margin: 0 2em
    margin-right: 4em;
    font-size: .8em;

    li
      display: inline-block;
      margin: 0 2em;
  h1
    font-weight: bold;
    font-size: 1.2em;

#panel
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  font-size: 16px;
  flex: 1 1 100%;

  &> h2
    height = 1.5em;
    font-size: 1em;
    
    line-height: height;
    height: height;
    max-height: height;

    text-align: center;
    background-color: crimson;
    color: white;
    transition: all .5s;

    &.close
      max-height: 0;

  &> div
    height: 100%;
    flex: 1 1 100%;
    display: flex;
    align-items: stretch;

    #side-tabs
      min-width: 100px;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;

      ul
        width: 100%;

        li
          height: 60px;
          width: 100%;
          background: lightblue;
          padding-left: 1em;
          display: flex;
          justify-content: flex-start;
          align-items: center;
          box-shadow: 0 0 15px 0 lightGrey;
          color: white;
          border-top-right-radius: 5px;
          border-bottom-right-radius: 5px;
      
    #workspace
      flex: 1 1 100%;
      display: flex;
      flex-direction: column;

      .title
        margin: 2em;
        text-align: center;
        flex: 0 0 auto;
      
      .inner-route
        flex: 0 1 100%;
        overflor-y: auto;

    #warning-cards
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: stretch;
      flex: 1 0 auto;
      width: 300px;
      box-shadow: inset 0 0 10px lightGrey;
      height: 95%;
      height: calc(100% - 1em);
      align-self: center;

      &.close
        max-width: 0;
