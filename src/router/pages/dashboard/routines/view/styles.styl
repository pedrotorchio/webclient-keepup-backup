.visualization, #gantt, #rows, #xAxis, #canvas, #gantt-container
  width: 100%;
  height: 100%;
  position: relative;

#xAxis, #rows
  position absolute;
  top 0;


#gantt-container
  display flex;

#yAxis
  max-width: 300px;

.task-title
  box-sizing: border-box;
  white-space: nowrap;
  display: flex;
  font-weight bold;
  align-items: center;
  text-align: left;
  padding: 5px;

  &:nth-of-type(odd)
    background-color: rgba(100, 200, 200, .5);
  
  &:nth-of-type(even)
    background-color: rgba(120, 220, 220, .5);


.row, .hour-tick
  box-sizing: border-box;

  &:nth-of-type(odd)
    background-color: rgba(100, 200, 200, .3);
  
  &:nth-of-type(even)
    background-color: rgba(120, 220, 220, .3);



#xAxis
  display flex;

  .hour-tick
    padding 5px;
    display: flex;
    align-items: flex-end;


#form-toggles, #toggles
  display flex
  align-items center
  justify-content: flex-start

#form-toggles
  margin-bottom 24px
  z-index 55
  .form-toggles-title
    font-size .8em;    
    margin-right 1em;

  .toggle
    margin 2px
    padding 2px
    border 2px solid
    border-radius 5px
    display inline-block
    position relative
    font-size 12px
    cursor pointer
    line-height 1.5em

    .filler_name, .pts
      display inline-block
      margin 0 5px
    
    .filler_name
      text-transform uppercase
    .quote, .tip
      font-size .8em
    .tip
      font-weight bold
      margin-top 1em
      text-align center
  
