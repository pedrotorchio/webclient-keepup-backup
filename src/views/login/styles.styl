@import '~@/styles/colors.styl';
@import '~@/styles/animations.styl';

#signup-page
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;


  #login-form-wrapper
    width: 95%
    max-width: 400px
    margin: 0 auto
    padding: 10px
    &.login, &.signup, &.reset
      animation-name: settling;
      animation-duration: 1s;
      animation-timing-function: cubic-bezier(.14, .79, 0, 1.01);


  #title
    color: orange;
    font-size: 96px;
    margin-top: -2em;
    margin-bottom: 1em;

  #signup-form
    width: 100%
    flex: 0 1 auto;

  #signup-btn, #call
    text-align: right;
    font-size: 16px;
    margin-bottom: 1em;
  .reset-password-link
    color: inherit
    opacity: .6
    margin-top: .5em
    &:hover
      color: orange
      opacity: 1