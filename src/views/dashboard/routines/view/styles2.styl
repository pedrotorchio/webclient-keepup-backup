@import '~media-query-mixins/_mixins.styl'

#visualization-route
    text-align center

    #form-toggles
        margin 0 auto;
        display inline-block

    #form-toggles-title
        font-size: 14px
        +md()
            font-size: 16px

    #toggles
        display flex
        align-items center
        justify-content: center

    #gantt-container
        display: grid;
        grid-template-areas: "intersection xAxis" "yAxis gantt";
        grid-template-columns min-content auto

        #intersection, #yAxis
            display: none
            +sm()
                display: block

        #intersection
            grid-area intersection
            align-self center
            justify-self left
            text-transform uppercase
            visibility hidden
                
        #yAxis
            grid-area yAxis
        #xAxis
            grid-area xAxis
        #gantt
            grid-area gantt
            position relative

            #columns, #rows, #tasks
                position absolute
                height 100%
                width 100%

            #columns /deep/ .tick
                height 100%
            


#gantt-container /deep/ 
    .tick, .task-title
        &:nth-of-type(odd)
            background-color: rgba(100, 200, 200, .2);
        
        &:nth-of-type(even)
            background-color: rgba(120, 220, 220, .2);